# 🔐 Variables de Entorno para EduTech Support Service
# ⚠️ IMPORTANTE: Copia este archivo como .env y configura tus credenciales reales

# 🗄️ Configuración de Base de Datos PostgreSQL
DATABASE_URL=jdbc:postgresql://localhost:5432/supportdb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=tu_password_seguro_aqui

# 🚀 Configuración del Servicio (Opcional)
SERVER_PORT=8084
SPRING_PROFILES_ACTIVE=dev

# 📊 Configuración de Monitoreo (Opcional)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# 🌐 Configuración de CORS (Opcional)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# 📝 Configuración de Logging (Opcional)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EDUTECH=DEBUG
